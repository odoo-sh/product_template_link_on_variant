<odoo>

    <record id="product_normal_form_view" model="ir.ui.view">
        <field name="name">product.normal.form.view</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='open_pricelist_rules']" position="before">
                <button name="action_view_product_template_form" type="object" icon="fa-level-up" class="oe_stat_button" string="Product Template"/>
            </xpath>
        </field>
    </record>

</odoo>
